@model Hacaton54.Models.Extensions.LoginModel
@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    var returnUrl = @Context.Request.Query["returnurl"];
}

<!-- Auth form -->
<div class="container">
        <div style="margin-top: 250px" class="row justify-content-center align-items-center">
            <div class="col-3"></div>
            <div class="col-6" id="auth-container">
                <div class="row justify-content-center">
                    <div class="col-1">
                        <img src="~/resource/icons/ks54.svg" />
                    </div>
                    <div class="col-11 header-auth">
                        Учет документов
                    </div>
                </div>
                <form asp-action="Login" asp-controller="User" asp-route-returnurl="@returnUrl" asp-anti-forgery="true">
                    <div class="form-group">
                        <input type="text" asp-for="UserName" class="form-control textbox" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Введите ваш логин">
                    </div>
                    <div class="form-group">
                        <input type="password" asp-for="Password" class="form-control textbox" id="exampleInputPassword1" placeholder="Введите ваш пароль">
                    </div>

                    <div style="margin-bottom: 30px; color: white">
                        <p><b>@ViewData["Message"]</b></p>
                    </div>

                    <div style="margin-bottom: 30px; color: white">
                        Техническая поддержка: hacaton54@yandex.ru
                    </div>

                    <div class="row">
                        <div class="col-4"></div>
                        <button type="submit" class="col-4 btn style-action-button">Войти</button>
                        <div class="col-4"></div>
                    </div>
                </form>
            </div>            
            <div class="col-3"></div>
        </div>
</div>
