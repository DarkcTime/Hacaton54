
<div class="row">
    <!-- Left menu -->
    <div class="col-3">
        <div class="container leftmenu" style="margin-right: 10px; ">
            <div class="row header-leftmenu align-items-center justify-content-center">
                Студенты
            </div>
            <div class="row item-leftmenu justify-content-center" style="margin-top:20px;">
                Добавление
            </div>
            <div class="row item-leftmenu justify-content-center" style="margin-top:10px;margin-bottom:10px;">
                <button type="button" class="btn btn-primary btn-sm">
                    @Html.ActionLink("Добавить студента", "AddStudent", "Student", null, new { style = "color:white" })
                </button>
            </div>
            <div class="row item-leftmenu justify-content-center" style="margin-top:10px;margin-bottom:10px;">
                <button type="button" class="btn btn-primary btn-sm">
                    @Html.ActionLink("Добавить из Excel", "#", "Student", null, new { style = "color:white" })
                </button>
            </div>
            <div class="row item-leftmenu justify-content-center" style="margin-top:20px;margin-bottom:10px;">
                Экспорт
            </div>
            <div class="row item-leftmenu justify-content-center" style="margin-top:10px;margin-bottom:10px;">
                <button type="button" class="btn btn-primary btn-sm">
                    @Html.ActionLink("Экспорт из Excel", "#", "Student", null, new { style = "color:white" })
                </button>
            </div>
        </div>
        <div class="container" style="margin-top:30px">
            <div class="row align-items-end justify-content-center">
                <img src="~/resource/images/ks54_transparent.png" id="image_transparent" />
            </div>
        </div>
    </div>

    <!-- List -->
    <div class="col-9">

        <div class="row" style="padding-left: 20px; padding-right: 20px;">
            <!-- Search form -->
            <div class="col">
                <div class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Login <span class="glyphicon glyphicon-log-in"></span></a>
                    <div class="dropdown-menu">
                        <form>
                            <div class="row">
                                <div class="col">
                                    <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Группа</label>
                                    <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
                                        <!-- <option selected>Choose...</option> -->
                                    </select>
                                </div>
                                <div class="col">
                                    <label for="formGroupExampleInput">Курс</label>
                                    <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
                                        <!-- <option selected>Choose...</option> -->
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="2">3</option>
                                        <option value="2">4</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <label for="formGroupExampleInput">Дата рождения</label>
                                <input type="date" class="form-control">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col">
                <form>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search this blog">
                        <div class="input-group-append">
                            <button class="btn btn-secondary" type="button">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div style="padding: 20px">
            <div class="table-wrapper-scroll-y my-custom-scrollbar">
                <!-- Tables with students -->
                <table class="table table-bordered table-striped mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th> Id</th>
                            <th scope="col">Имя</th>
                            <th scope="col">Группа</th>
                            <th scope="col">Телефон</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Student student in Model)
                        {

                            <tr>
                                <th scope="row">@student.Id</th>
                                <th>@student.Name</th>
                                @if (student.GroupId != null)
                                {
                                    <th>@student.Group.GroupName</th>
                                }
                                else
                                {
                                    <th>не заполнено</th>
                                }
                                @if (student.Phone != null)
                                {
                                    <th>@student.Phone</th>
                                }
                                else
                                {
                                    <th>не заполнено</th>
                                }
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>

        <!-- Count rows -->
        <div class="row" style="padding-left: 20px; padding-right: 20px;">
            Всего выведено записей: 450/450
        </div>
    </div>
</div>

