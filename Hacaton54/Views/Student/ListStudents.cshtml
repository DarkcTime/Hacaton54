
<div class="row">
    <!-- Left menu -->
    <div class="col-3">
        <div class="container leftmenu" style="margin-right: 10px; ">
            <div class="row header-leftmenu align-items-center justify-content-center">
                Студенты
            </div>
            <div class="row item-leftmenu justify-content-center" style="margin-top:20px;">
                Добавление
            </div>
            <div class="row item-leftmenu justify-content-center" style="margin-top:10px;margin-bottom:10px;">
                <button type="button" class="btn btn-primary btn-sm">
                    @Html.ActionLink("Добавить студента", "AddStudent", "Student", null, new { style = "color:white" })
                </button>
            </div>
            <div class="row item-leftmenu justify-content-center" style="margin-top:10px;margin-bottom:10px;">
                <button type="button" class="btn btn-primary btn-sm">
                    @Html.ActionLink("Добавить/Редактировать из Excel", "ImportStudents", "Student", null, new { style = "color:white" })
                </button>
            </div>
            <div class="row item-leftmenu justify-content-center" style="margin-top:20px;margin-bottom:10px;">
                Экспорт
            </div>
            <div class="row item-leftmenu justify-content-center" style="margin-top:10px;margin-bottom:10px;">
                <button type="button" class="btn btn-primary btn-sm">
                    @Html.ActionLink("Экспорт в Excel", "ExportExcel", "Student", null, new { style = "color:white" })
                </button>
            </div>
        </div>

        <div class="container" style="margin-top:70px">
            <div class="row align-items-end justify-content-center">
                <img src="~/resource/images/ks54_transparent.png" id="image_transparent" />
            </div>
        </div>
    </div>

    <!-- List -->
    <div class="col-9">

        <div class="row" style="padding-left: 20px; padding-right: 20px;">
            <div class="col">
               
            </div>            
            <!-- Search form -->
            <div class="col">
                <form method="post">
                    <div class="row">
                        <div class="col-9">
                            <input type="text" name="searchString" class="form-control" placeholder="Поиск">
                        </div>
                        <div class="col-3">
                            <input type="submit" class="form-control btn btn-primary" value="Поиск" />
                        </div>
                    </div>
                </form>
            </div>
           
        </div>

        <div style="padding: 20px">
            <div class="table-wrapper-scroll-y my-custom-scrollbar">
                <!-- Tables with students -->
                <table class="table table-bordered table-striped mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">ФИО</th>
                            <th scope="col">Группа</th>
                            <th scope="col">Телефон</th>
                            <th scope="col">Изменить</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Student student in Model)
                        {
                            <tr>
                                <th>
                                    @student.SurName @student.Name @student.Patronymic
                                </th>
                                <th>
                                    @student.Group?.GroupName
                                </th>
                                <th>
                                    @student.Phone
                                </th>
                                <th>
                                    <a asp-action="EditStudent" asp-route-id="@student.Id">Редактировать</a>
                                </th>

                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>

        <!-- Count rows -->
        <div class="row" style="padding-left: 20px; padding-right: 20px;">
            Всего выведено записей: @ViewData["Count"]/@ViewData["All"]
        </div>
    </div>
</div>

