@model Hacaton54.Models.ModelDB.Student
<div class="container">
    <div class="row justify-content-center">
        <h3>Добавление студента</h3>
    </div>
    <form asp-action="AddStudent" asp-controller="Student" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col">
                <label for="formGroupExampleInput">Фамилия</label>
                <input asp-for="SurName" type="text" class="form-control" placeholder="Иванов">
            </div>
            <div class="col">
                <label for="formGroupExampleInput">Имя</label>
                <input asp-for="Name" type="text" class="form-control" placeholder="Иван">
            </div>
            <div class="col">
                <label for="formGroupExampleInput">Отчество</label>
                <input asp-for="Patronymic" type="text" class="form-control" placeholder="Иванович">
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label for="formGroupExampleInput">Дата рождение</label>
                <input asp-for="BirthDate" type="date" class="form-control">
            </div>
            <div class="col">
                <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Пол</label>
                <select asp-for="GenderId" class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
                    <!-- <option selected>Choose...</option> -->
                    <option value="1">Мужской</option>
                    <option value="2">Женский</option>
                </select>
            </div>
            <div class="col">
                <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Группа</label>
                <select asp-for="GroupId" asp-items="ViewBag.AllGroup" class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">

                    <!--
                        <option selected>Choose...</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    -->
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label for="formGroupExampleInput">Телефон</label>
                <input asp-for="Phone" type="tel" class="form-control">
            </div>
            <div class="col">
                <label for="formGroupExampleInput">Домашний телефон</label>
                <input asp-for="HousePhone" type="tel" class="form-control" placeholder="">
            </div>
            <div class="col">
                <label for="formGroupExampleInput">Email</label>
                <input asp-for="EMail" type="email" class="form-control" placeholder="hacaton54@yandex.ru">
            </div>
        </div>
        <div class="row">
            <label for="formGroupExampleInput">Адрес проживания</label>
            <input asp-for="AdressFact" type="text" class="form-control" placeholder="г. Москва ул. Генерала Карбышева 18к1 кв.20">
        </div>
        <div class="row">
            <div class="col">
                <label for="formGroupExampleInput">СНИЛС</label>
                <input asp-for="Snils" type="text" class="form-control">
            </div>
            <div class="col">
                <label for="formGroupExampleInput">ИНН</label>
                <input asp-for="Inn" type="text" class="form-control">
            </div>
            <div class="col">
                <label for="formGroupExampleInput">Мед. полис</label>
                <input asp-for="MedPolicy" type="text" class="form-control">
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col">
                <button type="button" class="btn btn-primary btn-sm">
                    @Html.ActionLink("Параметры фильтрации", "FilteringStudent", "Student", null, new { style = "color:white" })
                </button>
            </div>
            <div class="col">
                <button type="button" class="btn btn-primary btn-sm">
                    @Html.ActionLink("Параметры фильтрации", "FilteringStudent", "Student", null, new { style = "color:white" })
                </button>
            </div>
            <div class="col">
                <button type="button" class="btn btn-primary btn-sm">
                    @Html.ActionLink("Параметры фильтрации", "FilteringStudent", "Student", null, new { style = "color:white" })
                </button>
            </div>
        </div>

        <div class="row justify-content-center">
            <button type="button" class="btn btn-primary btn-sm">
                @Html.ActionLink("Параметры фильтрации", "FilteringStudent", "Student", null, new { style = "color:white" })
            </button>
            <button type="button" class="btn btn-primary btn-sm">
                @Html.ActionLink("Параметры фильтрации", "FilteringStudent", "Student", null, new { style = "color:white" })
            </button>
        </div>
        <input type="submit" value="загрузить">
    </form>

</div>
