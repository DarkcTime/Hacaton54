<div class="container">
    <div class="row">
        <!-- Help -->
        <div class="col">
            
        </div>

        <!-- Add/Edit Excel -->
        <div class="col">
            <div class="container">
                <div class="row">
                    <form asp-action="ImportStudents" asp-controller="Student" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="uploadedFile">Файл Excel <b>.xlsx</b></label>
                            <input type="file" class="form-control-file" name="uploadedFile" id="uploadedFile" />
                            <input type="submit" value="загрузить">
                        </div>
                    </form>
                </div>
                <div >
                    <div class="table-wrapper-scroll-y my-custom-scrollbar">
                        <!-- Tables with students -->
                        <table class="table table-bordered table-striped mb-0">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">ФИО</th>
                                    <th scope="col">Группа</th>
                                    <th scope="col">Телефон</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Student student in Model)
                                {                                    
                                    <tr>
                                        <th>
                                            @if (@student.Name != null)
                                            {
                                                @student.Name
                                            }

                                            @if (@student.SurName != null)
                                            {
                                                @student.SurName
                                            }

                                            @if (@student.Patronymic != null)
                                            {
                                                @student.Patronymic
                                            }
                                        </th>

                                        @if (student.GroupId != null)
                                        {
                                            <th>@student.Group.GroupName</th>
                                        }
                                        else
                                        {
                                            <th>не заполнено</th>
                                        }
                                        @if (student.Phone != null)
                                        {
                                            <th>@student.Phone</th>
                                        }
                                        else
                                        {
                                            <th>не заполнено</th>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- Count rows -->
                <div class="row" style="padding-left: 20px; padding-right: 20px;">
                    Всего выведено записей: @ViewData["All"]
                </div>

                <div class="row">
                    <button type="button" class="btn btn-primary btn-sm">
                        @Html.ActionLink("Добавить в БД", "AddStudentsToDataBase", "Student", null, new { style = "color:white" })
                    </button>
                </div>

            </div>
        </div>
    </div>
</div>


