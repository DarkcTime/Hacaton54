
<div class="container">

    <!-- List -->
    <div class="row">
        <!-- Filtering form -->
        <div class="col">
            <div class="row justify-content-start" style="margin-top:10px;margin-bottom:10px;">
                <button type="button" class="btn btn-primary btn-sm">
                    @Html.ActionLink("Экспорт в Excel", "ExportExcel", "Statements", null, new { style = "color:white" })
                </button>
            </div>
        </div>
        <!-- Search form -->
        <div class="col justify-content-end">
            <form method="post">
                <div class="row">
                    <div class="col-9">
                        <input type="text" name="search" class="form-control" placeholder="Поиск">
                    </div>
                    <div class="col-3">
                        <input type="submit" class="form-control btn btn-primary" value="Поиск" />
                    </div>
                </div>
                <small>Поиск осуществляется по ФИО студента, группе или оценке</small>
            </form>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="table-wrapper-scroll-y my-custom-scrollbar">
            <!-- Tables with students -->
            <table class="table table-bordered table-striped mb-0">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ФИО</th>
                        <th scope="col">Группа</th>
                        <th scope="col">Дисциплина</th>
                        <th scope="col">Оценка</th>
                        <th scope="col">Дата проведения</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (AttestationStudent attestationStudent in Model)
                    {
                        <tr>
                            <th>
                                @attestationStudent.Student.SurName @attestationStudent.Student.Name @attestationStudent.Student.Patronymic
                            </th>
                            <th>
                                @attestationStudent.Student.Group?.GroupName
                            </th>
                            <th>
                                @attestationStudent.Attestation.DisciplineEmployee.Discipline.Name
                            </th>
                            <th>
                                @attestationStudent.Score.Name
                            </th>
                            <th>
                                @attestationStudent.HoldingDate
                            </th>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>

    <!-- Count rows -->
    <div class="row" style="padding-left: 20px; padding-right: 20px;">
        <!-- Всего выведено записей: ViewData["Count"]/ViewData["All"] -->
    </div>
</div>

